<div class="container-fluid" ng-controller="UserPickerCtrl">
  <div class="row">
    <h1>{{ title }}</h1>
    <div class="col-md-6">
      <ul class="friend-list" ng-cloak>
        <li ng-repeat="friend in friends" ng-class="{hasapp: friend.hasApp}">
        {[{friend.email}]}
        <span class="badge" style="float:right" ng-show="friend.hasApp">
          <span class="glyphicon glyphicon-ok"></span>
        </span>
        </li>
      </ul>
    </div>
